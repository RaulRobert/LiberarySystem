@model IEnumerable<library_system.Models.Book>

@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Books";
    var role = Context.Session.GetString("Role");
}

<style>
    .books-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 0;
        margin-bottom: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

        .books-hero h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .books-hero p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

    .book-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s, box-shadow 0.3s;
        overflow: hidden;
        height: 100%;
        border: none;
    }

        .book-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

    .book-card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px 20px;
        text-align: center;
        position: relative;
    }

    .book-icon {
        font-size: 3rem;
        margin-bottom: 15px;
        opacity: 0.9;
    }

    .book-card-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin: 0;
        line-height: 1.3;
    }

    .book-card-body {
        padding: 25px;
    }

    .book-info {
        margin-bottom: 20px;
    }

    .book-info-item {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
        color: #555;
    }

        .book-info-item i {
            width: 25px;
            color: #667eea;
            font-size: 1.1rem;
        }

        .book-info-item .label {
            font-weight: 600;
            margin-right: 8px;
            color: #333;
        }

    .book-status {
        display: inline-flex;
        align-items: center;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-available {
        background: #d4edda;
        color: #155724;
    }

    .status-borrowed {
        background: #f8d7da;
        color: #721c24;
    }

    .book-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        padding-top: 15px;
        border-top: 2px solid #f0f0f0;
    }

    .btn-custom {
        flex: 1;
        min-width: 100px;
        padding: 10px 15px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
        border: none;
        font-size: 0.9rem;
    }

    .btn-details {
        background: #667eea;
        color: white;
    }

        .btn-details:hover {
            background: #5568d3;
            transform: scale(1.05);
        }

    .btn-edit {
        background: #ffc107;
        color: #000;
    }

        .btn-edit:hover {
            background: #e0a800;
            transform: scale(1.05);
        }

    .btn-delete {
        background: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background: #c82333;
            transform: scale(1.05);
        }

    .btn-borrow {
        background: #28a745;
        color: white;
    }

        .btn-borrow:hover {
            background: #218838;
            transform: scale(1.05);
        }

    .btn-return {
        background: #fd7e14;
        color: white;
    }

        .btn-return:hover {
            background: #e8590c;
            transform: scale(1.05);
        }

    .add-book-btn {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 15px 30px;
        border-radius: 10px;
        font-weight: 600;
        border: none;
        box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        transition: all 0.3s;
    }

        .add-book-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
            background: linear-gradient(135deg, #20c997 0%, #28a745 100%);
        }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #666;
    }

        .empty-state i {
            font-size: 5rem;
            color: #ddd;
            margin-bottom: 20px;
        }

        .empty-state h3 {
            color: #333;
            margin-bottom: 10px;
        }


    {
        font-size: 2rem;
    }

    .book-card-body {
        padding: 20px;
    }

    .btn-custom {
        flex: 1 1 100%;
    }

    }
</style>

<div class="container mt-4">
    <div class="books-hero">
        <div class="text-center">
            <i class="fas fa-book-open"></i>
            <h1>Library Collection</h1>
            <p>Explore our extensive collection of books and resources</p>
        </div>
    </div>

    @if (role == "Admin" || role == "Employee")
    {
        <div class="mb-4 text-center">
            <a asp-area="User" asp-controller="Books" asp-action="Create" class="add-book-btn">
                <i class="fas fa-plus-circle"></i> Add New Book
            </a>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var book in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="book-card">
                        <div class="book-card-header">
                            <div class="book-icon">
                                <i class="fas fa-book"></i>
                            </div>
                            <h3 class="book-card-title">@book.Title</h3>
                        </div>

                        <div class="book-card-body">
                            <div class="book-info">
                                <div class="book-info-item">
                                    <i class="fas fa-user-edit"></i>
                                    <span class="label">Author:</span>
                                    <span>@book.Authors?.FirstName @book.Authors?.SecondName</span>
                                </div>

                                <div class="book-info-item">
                                    <i class="fas fa-building"></i>
                                    <span class="label">Publisher:</span>
                                    <span>@book.Pubblisher?.Company</span>
                                </div>

                                <div class="book-info-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <span class="label">Published:</span>
                                    <span>@book.PubblicDate.ToString("MMM dd, yyyy")</span>
                                </div>

                                <div class="book-info-item">
                                    <i class="fas fa-info-circle"></i>
                                    <span class="label">Status:</span>
                                    @if (book.IsBorrowed)
                                    {
                                        <span class="book-status status-borrowed">
                                            <i class="fas fa-times-circle me-1"></i> Borrowed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="book-status status-available">
                                            <i class="fas fa-check-circle me-1"></i> Available
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="book-actions">
                                <a asp-area="User" asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="btn btn-custom btn-details">
                                    <i class="fas fa-eye"></i> Details
                                </a>

                                @if (role == "Admin" || role == "Employee")
                                {
                                    <a asp-area="User" asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-custom btn-edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                }

                                @if (role == "Admin")
                                {
                                    <a asp-area="User" asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-custom btn-delete">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                }

                                @if (role == "User" || role == "Admin" || role == "Employee")
                                {
                                    @if (!book.IsBorrowed)
                                    {
                                        <form asp-area="User" asp-controller="Books" asp-action="Borrow" asp-route-id="@book.Id" method="post" style="flex: 1; min-width: 100px;">
                                            <button type="submit" class="btn btn-custom btn-borrow w-100">
                                                <i class="fas fa-book-reader"></i> Borrow
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-area="User" asp-controller="Books" asp-action="Return" asp-route-id="@book.Id" method="post" style="flex: 1; min-width: 100px;">
                                            <button type="submit" class="btn btn-custom btn-return w-100">
                                                <i class="fas fa-undo"></i> Return
                                            </button>
                                        </form>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-book-open"></i>
            <h3>No Books Available</h3>
            <p>There are currently no books in the library collection.</p>
            @if (role == "Admin" || role == "Employee")
            {
                <a asp-area="User" asp-controller="Books" asp-action="Create" class="add-book-btn mt-3">
                    <i class="fas fa-plus-circle"></i> Add Your First Book
                </a>
            }
        </div>
    }
</div>