@* Views/Books/Delete.cshtml *@
@model library_system.Models.Book

@{
    Layout = "_LayoutAdmin";  
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>
<hr />

<div class="alert alert-warning">
    <p>Are you sure you want to delete this book?</p>
</div>

<div class="card">
    <div class="card-body">
        <h4>@Model.Title</h4>
        <p><strong>Author:</strong> @Model.Authors?.FirstName @Model.Authors?.SecondName</p>
        <p><strong>Publisher:</strong> @Model.Pubblisher?.Company</p>
        <p><strong>Typology:</strong> @Model.Tipology?.Description</p>
        <p><strong>Year:</strong> @Model.PubblicDate</p>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
